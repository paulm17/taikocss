{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "npm"
  ]
}